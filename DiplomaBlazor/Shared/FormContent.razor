@inject NavigationManager NavigationManager

<div class="form-container">
        <div class="form-body bg-white shadow d-flex flex-column">
            <h3 class="mt-3 text-center">@Heading</h3>
            <div class="mt-3 flex-grow-1">
                <div class="vstack text-start">
                @ChildContent
                </div>                
        </div>

        <div class="row my-3">
            <div class="col-1"></div>
            <div class="col-2">
                <button type="button" class="btn btn-outline-danger shadow"
                        @onclick="() => NavigationManager.GoBack()">
                    <i class="bx bx-x"></i>
                </button>
            </div>
            <div class="col-1"></div>
            <div class="col-7">
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary rounded-pill shadow">@ButtonText</button>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</div>
@code {
    [Parameter, EditorRequired]
    public string  Heading { get; set; }
    [Parameter, EditorRequired]
    public string ButtonText { get; set; }
    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; }
}

<style type="text/css" scoped>
    .form-container {
        background-color: transparent;
        margin-top: -200px;
        padding: 25px 10px;
    }

    .form-body {
        background-color: white;
        border-radius: 40px 40px 0 0;
        min-height: calc(100vh - 200px);
        padding: 15px;
    }
</style>
